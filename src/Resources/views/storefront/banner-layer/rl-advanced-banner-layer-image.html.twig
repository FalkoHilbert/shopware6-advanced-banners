{% block rl_advanced_banner_layer_image %}
{% set mediaCollection = searchMedia([layer.config.mediaId], context.context) %}
{% set media = mediaCollection.get(layer.config.mediaId) %}
{% sw_thumbnails 'cms-block-background' with {
    media: media,
    attributes: {
        class: "rl-advanced-banner-image rl-advanced-banner-image--media-mode--" ~ layer.config.mediaMode,
        style: "object-position: "~ layer.config.mediaPositionX ~ " " ~ layer.config.mediaPositionY ~ ";"
    }
} %}
{% endblock %}
